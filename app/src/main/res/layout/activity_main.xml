<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.admin.mycalculator.MainActivity" >

    <TextView
        android:id="@+id/tvResultDisplay"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:textSize="@dimen/textSize"
        android:gravity="right"/>

    <TextView
        android:id="@+id/tvInputDisplay"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:hint="@string/displayDefault"
        android:gravity="right"
        android:textSize="50sp"
        android:padding="5dp"
        android:layout_below="@id/tvResultDisplay"/>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="5"
        android:columnCount="4"
        android:layout_below="@id/tvInputDisplay">

        <Button
            android:id="@+id/btnClear"
            android:text="C"
            android:textSize="@dimen/textSize"
            android:textColor="@color/colorHighlight"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnPercent"
            android:text="%"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnDivide"
            android:text="/"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnSeven"
            android:text="7"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnEight"
            android:text="8"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnNine"
            android:text="9"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnMultiply"
            android:text="X"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />

        <Button
            android:id="@+id/btnFour"
            android:text="4"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnFive"
            android:text="5"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnSix"
            android:text="6"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnMinus"
            android:text="-"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnOne"
            android:text="1"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnTwo"
            android:text="2"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnThree"
            android:text="3"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnPlus"
            android:text="+"
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
        <Button
            android:id="@+id/btnEquals"
            android:text="="
            android:textSize="@dimen/textSize"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1" />
    </GridLayout>
</RelativeLayout>
